upstream gitea {
	server unix:/home/git/run/gitea.sock fail_timeout=0;
}

server {
	listen [::]:80;
	listen 0.0.0.0:80;
	client_max_body_size 0;
	include /etc/nginx/include/gitea-proxy;
}

server {
	listen [::]:443;
	listen 0.0.0.0:443 ssl;
	client_max_body_size 0;
	include /etc/nginx/snippets/ssl.conf;
	include /etc/nginx/include/gitea-proxy;
}
